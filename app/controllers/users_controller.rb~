class UsersController < ApplicationController
  
  def new
    @user = User.new
  end


  def show
    @user = User.find(params[:id])
  end


  def create
    @user = User.new(params[:user])
    if @user.save
      flash[:sucess] = "Welcome to the sample app!"
      redirect_to @user
    else 
      render 'new'
      flash[:error] = "oooops ,try again"
    end
  end





end
